Page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
  font-size: 30rpx;
  background: #f2f2f2;
}

.bookScroll {
  width: 100%;
  height: max-content;
  flex: 1;
  white-space: nowrap;
}

.bookBody {
  width: 100%;
  overflow: scroll;
  padding-bottom: 100rpx;
  /* position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 100rpx; */
}

.bookBody .bookMsg {
  margin: 24rpx;
  display: flex;
  flex-direction: column;
  padding: 36rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 6rpx 20rpx #ccc;
  background: white;
}

.payItem {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
  border-top: 1rpx solid #ee6715;
  font-size: 32rpx;
  z-index: 10;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.payItem .priceItem {
  flex: 1;
  color: #ee6715;
  padding-left: 24rpx;
}

.payItem .payBtn {
  display: flex;
  align-items: center;
  height: 100%;
  justify-content: center;
  color: white;
  font-weight: bold;
  width: 250rpx;
  background: #ee6715;
}

.settingItem {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  flex-direction: row;
  background: white;
  border-bottom: #dedede solid 1px;
  padding: 26rpx;
  align-items: center;
}

.settingItem .caption, .settingItem .value {
  font-size: 30rpx;
  color: #333;
  align-items: center;
  display: flex;
}

.settingItem .caption {
  width: 220rpx;
}

.settingItem .value {
  flex: 1;
  text-align: left;
}

.settingItem .icon {
  width: 28rpx;
  margin-left: 10rpx;
}

.settingItem .discount, .settingItem .remark {
  flex: 1;
  text-align: right;
  display: inline-block;
  align-items: center;
}

.settingItem .discount {
  color: #ee6715;
}

.settingItem .invoice {
  color: #ee6715;
  position: absolute;
  right: 0;
}

/*主容器*/  
.stepper {  
  width: 80px;  
  height: 26px;  
  /*给主容器设一个边框*/  
  border: 1px solid #ccc;  
  border-radius: 3px;   
}  

/*加号和减号*/  
.stepper text {  
  width: 19px;  
  line-height: 26px;  
  text-align: center;  
  float: left;  
}  

/*数值*/  
.stepper input {  
  width: 40px;  
  height: 26px;  
  float: left;  
  margin: 0 auto;  
  text-align: center;  
  font-size: 12px;  
  /*给中间的input设置左右边框即可*/  
  border-left: 1px solid #ccc;  
  border-right: 1px solid #ccc;  
}  

/*普通样式*/  
.stepper .normal{  
  color: black;  
}  

/*禁用样式*/  
.stepper .disabled{  
  color: #ccc;  
}  

.createBtn {
  display: flex;
  align-items: center;
  height: 100%;
  justify-content: center;
  color: white;
  font-weight: bold;
  width: 250rpx;
  background: #ee6715;
}